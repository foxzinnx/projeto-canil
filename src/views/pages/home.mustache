{{>partials/header}}

<main>
        <section class="hero-section">
            <div class="hero-container">
                <div class="wrapper-hero">
                    <div class="text-hero">
                        <p>ELES SÓ PRECISAM DE UMA CHANCE. <br />VOCÊ PODE DAR ESSA CHANCE</p>
                        
                        <button>Adotar</button>
                        
                    </div>

                    <div class="dog-image">
                        <img src="https://cdn.dribbble.com/userupload/29716701/file/original-60e62a1ce4079e0da19955e8b0b970db.jpg?resize=1504x1128&vertical=center" alt="Imagem do doguinho" />
                    </div>
                </div>
            </div>
            
        </section>

        <section id="animals" class="animals-section">
            <div class="wrapper-animals">
                <div class="title-div">
                    <img src="https://t4.ftcdn.net/jpg/06/66/37/85/360_F_666378580_PMj9NX6U0lJyTp91Tn2jHdtjs4XoHHix.jpg" alt="">
                    {{#banner}}
                        <h1>{{title}}</h1>
                    {{/banner}}
                </div>

                <div class="animals-grid">
                    {{#list}}
                        <div class="animal--item">
                            <div class="animal-photo">
                                <img src="/images/{{ image }}" alt="" />
                            </div>

                            <div class="animal-info">
                                <p id="animal-breed">{{ name }}</p>
                                <p>{{ vaccinated }}</p>
                                <p>Gênero: {{ gender }}</p>
                            </div>
                        </div>
                    {{/list}}
                    
                </div>
            </div>
        </section>
    </main>
</body>
</html>